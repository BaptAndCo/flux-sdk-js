{
  "extends": "airbnb/legacy",
  "env": {
    "node": true,
    "es6": false
  },
  "globals": {
    "require": true,
    "FluxSdk": true
  },
  "rules": {
    "space-before-function-paren": [
      2,
      "never"
    ],
    "no-var": 0,
    "prefer-arrow-callback": 0,
    "object-shorthand": 0,
    "vars-on-top": 0,
    "func-names": 0,
    "prefer-template": 0,
    "no-console": 0,
    "no-use-before-define": ["error", { "functions": false }]
  }
}
